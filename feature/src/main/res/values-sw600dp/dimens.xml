<resources>

    <!--
         Customize dimensions originally defined in res/values/dimens.xml (such as
         screen margins) for sw600dp devices (e.g. 7" tablets) here.
    -->

    <!-- height of bottom margin to allow for scrolling puzzle above keyboard -->
    <dimen name="keyboard_height">228dp</dimen>

    <!-- give lots of room so user can scroll puzzle to see photo -->
    <dimen name="puzzle_bottom_padding">1200dp</dimen>

    <dimen name="keyboard_letter_size">26dp</dimen>
    <dimen name="keyboard_infinitive_size">@dimen/x_large_fixed</dimen>

    <!-- width of individual cell -->
    <dimen name="cell_width">30dp</dimen>

    <dimen name="puzzle_margin_top">16dp</dimen>
    <dimen name="puzzle_margin_side">12dp</dimen>

    <dimen name="stats_map_height">500dp</dimen>

</resources>
