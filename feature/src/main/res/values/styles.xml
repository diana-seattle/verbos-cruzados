<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- bold text -->
    <style name="boldText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="answerStyle">
        <item name="android:textSize">@dimen/x_large</item>
    </style>

    <style name="answerHintStyle">
        <item name="android:textSize">@dimen/large_fixed</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="answerSubStyle">
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="answerLetterButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginRight">@dimen/quarter_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/medium_fixed</item>
    </style>
</resources>
