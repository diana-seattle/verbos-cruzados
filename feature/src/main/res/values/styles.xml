<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- bold text -->
    <style name="boldText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="answerTopStyle">
        <item name="android:textSize">@dimen/medium_fixed</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="answerSubStyle">
        <item name="android:textSize">@dimen/small_fixed</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="answerLetterButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/keyboard_letter_size</item>
        <item name="android:textColor">@color/soft_black</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
