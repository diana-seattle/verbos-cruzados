<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- bold text -->
    <style name="boldText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="answerLetterButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/keyboard_letter_background</item>
        <item name="android:elevation">1dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/keyboard_letter_size</item>
        <item name="android:textColor">@color/soft_black</item>
        <item name="android:fontFamily">@font/latoregular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="answerLetterButton.special">
        <item name="android:textColor">@color/keyboard_special_letters</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="answerOtherButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">1dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="statsIrregularityLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/soft_black</item>
        <item name="android:textSize">@dimen/small_fixed</item>
    </style>

    <style name="statsInfinitiveEndingLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/quarter_margin</item>
        <item name="android:textColor">@color/soft_black</item>
        <item name="android:textSize">@dimen/small_fixed</item>
    </style>

    <style name="statsInfinitiveEndingSeparator">
        <item name="android:layout_width">@dimen/large_margin</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@color/pale_gray</item>
    </style>

    <style name="helpBulletText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:drawableLeft">@drawable/ic_dot_24dp</item>
        <item name="android:drawablePadding">@dimen/half_margin</item>
        <item name="android:textColor">@color/soft_black</item>
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="gameOptionHeadingText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/quarter_margin</item>
        <item name="android:textColor">@color/medium_gray</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/small</item>
    </style>

</resources>
