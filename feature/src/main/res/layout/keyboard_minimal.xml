<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools">

    <!-- Making the overall layout clickable/focusable so that clicks don't bleed thru to the puzzle layout beneath -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/keyboard_height"
        android:background="@color/keyboard_translucent"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <!-- Row for answer presentation and infinitive button -->
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1.4"
                      android:background="@color/keyboard_yellow_translucent"
                      android:orientation="vertical"
                      android:paddingStart="@dimen/half_margin"
        >

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                <!-- Conjugation type (tense/mood) -->
                <TextView
                    android:id="@+id/keyboard_conjugation_type_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:paddingTop="@dimen/quarter_margin"
                    android:textColor="@color/soft_black"
                    android:textSize="@dimen/medium_fixed"
                    android:textStyle="italic"/>

                <!-- "Next" button (use padding to increase touch target) -->
                <TextView
                    android:id="@+id/button_next_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:paddingEnd="@dimen/three_quarter_margin"
                    android:paddingStart="@dimen/three_quarter_margin"
                    android:paddingTop="@dimen/quarter_margin"
                    android:text="@string/keyboard_next"
                    android:textColor="@color/keyboard_special_letters"
                    android:textSize="@dimen/medium_fixed"
                    android:textStyle="italic"/>

            </RelativeLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                <!-- Subject pronoun -->
                <TextView
                    android:id="@+id/keyboard_subject_pronoun_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/half_margin"
                    android:textColor="@color/soft_black"
                    android:textSize="@dimen/keyboard_infinitive_size"/>

                <!-- Infinitive -->
                <TextView
                    android:id="@+id/keyboard_button_infinitive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:textColor="@color/keyboard_special_letters"
                    android:textSize="@dimen/keyboard_infinitive_size"
                    tools:text="infinitive"/>

                <!-- English Translation -->
                <TextView
                    android:id="@+id/keyboard_translation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/half_margin"
                    android:lines="1"
                    android:textColor="@color/medium_gray"
                    android:textSize="@dimen/small_fixed"
                    android:textStyle="italic"/>

            </LinearLayout>
        </LinearLayout>

        <!-- separator line -->
        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/pale_gray"/>

        <!-- first row of 10 letters -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/button_q"
                style="@style/answerLetterButton"
                android:text="q"/>
            <TextView
                android:id="@+id/button_w"
                style="@style/answerLetterButton"
                android:text="w"/>
            <TextView
                android:id="@+id/button_e"
                style="@style/answerLetterButton"
                android:text="e"/>
            <TextView
                android:id="@+id/button_r"
                style="@style/answerLetterButton"
                android:text="r"/>
            <TextView
                android:id="@+id/button_t"
                style="@style/answerLetterButton"
                android:text="t"/>
            <TextView
                android:id="@+id/button_y"
                style="@style/answerLetterButton"
                android:text="y"/>
            <TextView
                android:id="@+id/button_u"
                style="@style/answerLetterButton"
                android:text="u"/>
            <TextView
                android:id="@+id/button_i"
                style="@style/answerLetterButton"
                android:text="i"/>
            <TextView
                android:id="@+id/button_o"
                style="@style/answerLetterButton"
                android:text="o"/>
            <TextView
                android:id="@+id/button_p"
                style="@style/answerLetterButton"
                android:text="p"/>

        </LinearLayout>

        <!-- second row of 9 letters -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- A dummy view for the sake of spacing -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/button_a"
                style="@style/answerLetterButton"
                android:text="a"/>
            <TextView
                android:id="@+id/button_s"
                style="@style/answerLetterButton"
                android:text="s"/>
            <TextView
                android:id="@+id/button_d"
                style="@style/answerLetterButton"
                android:text="d"/>
            <TextView
                android:id="@+id/button_f"
                style="@style/answerLetterButton"
                android:text="f"/>
            <TextView
                android:id="@+id/button_g"
                style="@style/answerLetterButton"
                android:text="g"/>
            <TextView
                android:id="@+id/button_h"
                style="@style/answerLetterButton"
                android:text="h"/>
            <TextView
                android:id="@+id/button_j"
                style="@style/answerLetterButton"
                android:text="j"/>
            <TextView
                android:id="@+id/button_k"
                style="@style/answerLetterButton"
                android:text="k"/>
            <TextView
                android:id="@+id/button_l"
                style="@style/answerLetterButton"
                android:text="l"/>
            <!-- A dummy view for the sake of spacing -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:visibility="invisible"/>

        </LinearLayout>

        <!-- third row of 7 letters and delete button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/button_z"
                style="@style/answerLetterButton"
                android:text="z"/>
            <TextView
                android:id="@+id/button_x"
                style="@style/answerLetterButton"
                android:text="x"/>
            <TextView
                android:id="@+id/button_c"
                style="@style/answerLetterButton"
                android:text="c"/>
            <TextView
                android:id="@+id/button_v"
                style="@style/answerLetterButton"
                android:text="v"/>
            <TextView
                android:id="@+id/button_b"
                style="@style/answerLetterButton"
                android:text="b"/>
            <TextView
                android:id="@+id/button_n"
                style="@style/answerLetterButton"
                android:text="n"/>
            <TextView
                android:id="@+id/button_m"
                style="@style/answerLetterButton"
                android:text="m"/>
            <ImageView
                android:id="@+id/button_left_arrow"
                style="@style/answerLetterButton"
                android:padding="3dp"
                android:src="@drawable/ic_baseline_arrow_back_24px"
                android:tint="@color/soft_black"/>
            <ImageView
                android:id="@+id/button_right_arrow"
                style="@style/answerLetterButton"
                android:padding="3dp"
                android:src="@drawable/ic_baseline_arrow_forward_24px"
                android:tint="@color/soft_black"/>

        </LinearLayout>

        <!-- fourth row of 6 letters -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/button_hide_keyboard"
                style="@style/answerLetterButton"
                android:layout_gravity="start"
                android:paddingEnd="6dp"
                android:paddingStart="2dp"
                android:src="@drawable/ic_baseline_keyboard_hide_24px"
                android:tint="@color/soft_black"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/button_a_accent"
                style="@style/answerLetterButton.special"
                android:text="á"/>
            <TextView
                android:id="@+id/button_e_accent"
                style="@style/answerLetterButton.special"
                android:text="é"/>
            <TextView
                android:id="@+id/button_i_accent"
                style="@style/answerLetterButton.special"
                android:text="í"/>
            <TextView
                android:id="@+id/button_o_accent"
                style="@style/answerLetterButton.special"
                android:text="ó"/>
            <TextView
                android:id="@+id/button_u_accent"
                style="@style/answerLetterButton.special"
                android:text="ú"/>
            <TextView
                android:id="@+id/button_u_umlaut"
                style="@style/answerLetterButton.special"
                android:text="ü"/>
            <TextView
                android:id="@+id/button_n_tilde"
                style="@style/answerLetterButton.special"
                android:text="ñ"/>
            <ImageView
                android:id="@+id/button_delete"
                style="@style/answerLetterButton"
                android:layout_margin="2dp"
                android:src="@drawable/ic_baseline_cancel_24px"
                android:tint="#ffea00"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:visibility="invisible"/>

        </LinearLayout>
    </LinearLayout>

</merge>
