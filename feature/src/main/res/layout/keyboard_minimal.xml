<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Making the overall layout clickable/focusable so that clicks don't bleed thru to the puzzle layout beneath -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/keyboard_height"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/keyboard_translucent"
        android:orientation="vertical">

        <!-- first row, 10 letters -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/button_q"
                style="@style/answerLetterButton"
                android:text="q"/>
            <TextView
                android:id="@+id/button_w"
                style="@style/answerLetterButton"
                android:text="w"/>
            <TextView
                android:id="@+id/button_e"
                style="@style/answerLetterButton"
                android:text="e"/>
            <TextView
                android:id="@+id/button_r"
                style="@style/answerLetterButton"
                android:text="r"/>
            <TextView
                android:id="@+id/button_t"
                style="@style/answerLetterButton"
                android:text="t"/>
            <TextView
                android:id="@+id/button_y"
                style="@style/answerLetterButton"
                android:text="y"/>
            <TextView
                android:id="@+id/button_u"
                style="@style/answerLetterButton"
                android:text="u"/>
            <TextView
                android:id="@+id/button_i"
                style="@style/answerLetterButton"
                android:text="i"/>
            <TextView
                android:id="@+id/button_o"
                style="@style/answerLetterButton"
                android:text="o"/>
            <TextView
                android:id="@+id/button_p"
                style="@style/answerLetterButton"
                android:text="p"/>

        </LinearLayout>

        <!-- second row, 9 letters -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- A dummy view for the sake of spacing -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/button_a"
                style="@style/answerLetterButton"
                android:text="a"/>
            <TextView
                android:id="@+id/button_s"
                style="@style/answerLetterButton"
                android:text="s"/>
            <TextView
                android:id="@+id/button_d"
                style="@style/answerLetterButton"
                android:text="d"/>
            <TextView
                android:id="@+id/button_f"
                style="@style/answerLetterButton"
                android:text="f"/>
            <TextView
                android:id="@+id/button_g"
                style="@style/answerLetterButton"
                android:text="g"/>
            <TextView
                android:id="@+id/button_h"
                style="@style/answerLetterButton"
                android:text="h"/>
            <TextView
                android:id="@+id/button_j"
                style="@style/answerLetterButton"
                android:text="j"/>
            <TextView
                android:id="@+id/button_k"
                style="@style/answerLetterButton"
                android:text="k"/>
            <TextView
                android:id="@+id/button_l"
                style="@style/answerLetterButton"
                android:text="l"/>
            <!-- A dummy view for the sake of spacing -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:visibility="invisible"/>

        </LinearLayout>

        <!-- third row, 7 letters and delete button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button_close"
                style="@style/answerLetterButton"
                android:layout_gravity="start"
                android:src="@drawable/ic_baseline_check_circle_24px"
                android:tint="@color/keyboard_done_key"/>
            <TextView
                android:id="@+id/button_z"
                style="@style/answerLetterButton"
                android:text="z"/>
            <TextView
                android:id="@+id/button_x"
                style="@style/answerLetterButton"
                android:text="x"/>
            <TextView
                android:id="@+id/button_c"
                style="@style/answerLetterButton"
                android:text="c"/>
            <TextView
                android:id="@+id/button_v"
                style="@style/answerLetterButton"
                android:text="v"/>
            <TextView
                android:id="@+id/button_b"
                style="@style/answerLetterButton"
                android:text="b"/>
            <TextView
                android:id="@+id/button_n"
                style="@style/answerLetterButton"
                android:text="n"/>
            <TextView
                android:id="@+id/button_m"
                style="@style/answerLetterButton"
                android:text="m"/>
            <!-- A dummy view for the sake of spacing -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/button_delete"
                style="@style/answerLetterButton"
                android:layout_weight="1"
                android:src="@android:drawable/ic_input_delete"
                android:tint="@color/soft_black"/>
            <!-- A dummy view for the sake of spacing -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:visibility="invisible"/>

        </LinearLayout>

        <!-- fourth row, 6 letters & infinitive & close -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- A dummy view for the sake of spacing -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/button_a_accent"
                style="@style/answerLetterButton.special"
                android:text="á"/>
            <TextView
                android:id="@+id/button_e_accent"
                style="@style/answerLetterButton.special"
                android:text="é"/>
            <TextView
                android:id="@+id/button_i_accent"
                style="@style/answerLetterButton.special"
                android:text="í"/>
            <TextView
                android:id="@+id/button_o_accent"
                style="@style/answerLetterButton.special"
                android:text="ó"/>
            <TextView
                android:id="@+id/button_u_umlaut"
                style="@style/answerLetterButton.special"
                android:text="ü"/>
            <TextView
                android:id="@+id/button_n_tilde"
                style="@style/answerLetterButton.special"
                android:text="ñ"/>
            <TextView
                android:id="@+id/button_infinitive"
                style="@style/answerLetterButton.special"
                android:layout_weight="3.5"
                android:text="infinitive"/>

        </LinearLayout>
    </LinearLayout>

</merge>
