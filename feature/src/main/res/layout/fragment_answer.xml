<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/answer_fragment"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/transparent"
              android:orientation="vertical"
              android:paddingEnd="@dimen/quarter_margin"
              android:paddingStart="@dimen/quarter_margin"
              xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/subject_pronoun_and_tense"
        style="@style/answerTopStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/quarter_margin"
        android:layout_marginTop="@dimen/quarter_margin"
    />

    <EditText
        android:id="@+id/txt_answer"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:clickable="true"
        android:focusable="true"
        android:imeOptions="actionGo"
        android:inputType="textNoSuggestions"
        android:maxLines="1"
        android:paddingEnd="2dp"
        android:paddingStart="2dp"
        android:paddingTop="2dp"
        android:textColor="@color/soft_black"
        android:textSize="@dimen/large_fixed"
    />

    <TextView
        android:id="@+id/infinitive_and_translation"
        style="@style/answerSubStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/quarter_margin"
    />

    <!-- buttons for accented letters -->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:id="@+id/button_accented_a"
                  style="@style/answerLetterButton"
                  tools:text="á"/>
        <TextView android:id="@+id/button_accented_e"
                  style="@style/answerLetterButton"
                  tools:text="é"/>
        <TextView android:id="@+id/button_accented_i"
                  style="@style/answerLetterButton"
                  tools:text="í"/>
        <TextView android:id="@+id/button_accented_o"
                  style="@style/answerLetterButton"
                  tools:text="ó"/>
        <TextView android:id="@+id/button_umlaut_u"
                  style="@style/answerLetterButton"
                  tools:text="ü"/>
        <TextView android:id="@+id/button_tilde_n"
                  style="@style/answerLetterButton"
                  tools:text="ñ"/>
        <TextView android:id="@+id/button_infinitive"
                  style="@style/answerLetterButton"
                  android:layout_width="90dp"
                  tools:text="@string/button_infinitive"/>
    </LinearLayout>

</LinearLayout>

