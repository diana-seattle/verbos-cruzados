<?xml version="1.0" encoding="utf-8"?>
<manifest package="org.indiv.dls.games.verboscruzados"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.VIBRATE"/>

    <!-- TODO: what happens if device doesn't support this setting, but activity screenOrientation is set? -->
    <uses-feature android:name="android.hardware.screen.portrait"/>

    <application>
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="aia-compat-api-min-version"
            android:value="1"/>

        <activity
            android:name=".MainActivity"
            android:configChanges="screenLayout|orientation|screenSize|smallestScreenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustNothing">
            <meta-data android:name="default-url"
                       android:value="https://games.dls.indiv.org/verboscruzados"/>

            <!-- For instant app -->
            <!--
            <intent-filter android:autoVerify="true" android:order="1">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="http"/>
                <data android:scheme="https"/>
                <data android:host="games.dls.indiv.org"
                      android:path="/verboscruzados"/>
            </intent-filter>
            -->

            <!-- Main activity launched on startup -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

    </application>

</manifest>